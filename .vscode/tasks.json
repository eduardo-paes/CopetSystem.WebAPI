{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/Infrastructure/WebAPI.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "dependsOn": "copy-file"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/src/Infrastructure/WebAPI.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "dependsOn": "copy-file"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/src/Infrastructure/WebAPI.csproj"
      ],
      "problemMatcher": "$msCompile",
      "dependsOn": "copy-file"
    },
    {
      "label": "copy-file",
      "type": "shell",
      "command": "cp",
      "args": ["${workspaceFolder}/src/Infrastructure/WebAPI/bin/Debug/net7.0"],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
