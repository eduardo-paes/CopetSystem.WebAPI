{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=COPET_DB;Port=15432;User ID=copet-admin;password=Copet@123;Include Error Detail=true;"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": "Information",
    "Filter": [
      {
        "Name": "ByIncludingOnly",
        "Args": {
          "expression": "StartsWith(SourceContext, 'Infrastructure.WebAPI.')"
        }
      }
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss}] {SourceContext} [{Level}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/copetsystem_logs_.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:HH:mm:ss}] {SourceContext} [{Level}] {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext"],
    "Properties": { "Application": "Infrastructure.WebAPI" }
  },
  "StorageFile": {
    "Directory": "./local-storage",
    "AllowedExtensions": [".txt", ".pdf", ".doc", ".docx", ".png", ".jpg"],
    "MaxFileSizeInBytes": 10485760,
    "NoticeDirectory": "Notices",
    "StudentDocDirectory": "StudentDocs",
    "ReportDirectory": "Reports"
  },
  "Jwt": {
    "SecretKey": "jwt_secret_key_gpic_webapi",
    "ExpireIn": 5,
    "Issuer": "gpic-webapi",
    "Audience": "webapi.gpic.server"
  },
  "SmtpConfiguration": {
    "Server": "smtp.office365.com",
    "Port": 587
  },
  "SmtpUsername": "${SMTPUSERNAME}",
  "SmtpPassword": "${SMTPPASSWORD}"
}
